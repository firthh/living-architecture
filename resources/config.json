{
    "metric": {
        "avg_http_response_time": {
            "name": "Response times",
            "unit": "ms",
            "source": "prometheus",
            "host": "http://demo.robustperception.io:9090/",
            "query": "avg(avg without (quantile)(rate(http_request_duration_microseconds[5m]) >= 0))"
        },
        "sum_http_requests_handled": {
            "name": "Sum requests",
            "unit": "",
            "source": "prometheus",
            "host": "http://demo.robustperception.io:9090/",
            "query": "sum(http_requests_total)"
        },
        "sum_bytes_sent": {
            "name": "Sent",
            "unit": "bytes",
            "source": "prometheus",
                   "host": "http://demo.robustperception.io:9090/",
            "query": "sum(http_response_size_bytes_sum)"
        },
        "disk_usage": {
            "name": "Disk usage",
            "unit": "%",
            "source": "prometheus",
            "host": "http://demo.robustperception.io:9090/",
            "query": "node_filesystem_free{mountpoint=\"/\"} / node_filesystem_size{mountpoint=\"/\"} * 100"
        }
    },
	"diagram": [{
			"name": "Load Balancer 1",
      "type": "box",
			"id": "lb1",
			"position": {
				"x": 100,
				"y": 100
			},
			"metrics": [{
					"id": "avg_http_response_time"
				},
				{
					"id": "sum_http_requests_handled"
				}
			]
		},
		{
			"name": "Load Balancer 2",
      "type": "box",
			"id": "lb2",
			"position": {
				"x": 500,
				"y": 100
			},
			"metrics": [{
					"id": "avg_http_response_time"
				},
				{
					"id": "sum_http_requests_handled"
				}
			]
		},
		{
			"name": "DB-001",
      "type": "database",
			"id": "db001",
			"position": {
				"x": 200,
				"y": 300
			},
			"metrics": [{
					"id": "disk_usage"
			  }
			]
		}
	]
}
