{
    "metric": {
        "avg_http_response_time": {
            "name": "Response times",
            "unit": "ms",
            "source": "prometheus",
            "host": "http://demo.robustperception.io:9090/",
            "query": "avg(avg without (quantile)(rate(http_request_duration_microseconds[5m]) >= 0))"
        },
        "sum_http_requests_handled": {
            "name": "Sum requests",
            "unit": "",
            "source": "prometheus",
            "host": "http://demo.robustperception.io:9090/",
            "query": "sum(http_requests_total)"
        },
        "sum_bytes_sent": {
            "name": "Sent",
            "unit": "bytes",
            "source": "prometheus",
                   "host": "http://demo.robustperception.io:9090/",
            "query": "sum(http_response_size_bytes_sum)"
        },
        "disk_usage": {
            "name": "Disk usage",
            "unit": "%",
            "source": "prometheus",
            "host": "http://demo.robustperception.io:9090/",
            "query": "node_filesystem_free{mountpoint=\"/\"} / node_filesystem_size{mountpoint=\"/\"} * 100"
        }
    },
